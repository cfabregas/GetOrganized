@import '../../style/iconfont.wxss';

.mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 1000;
  background: rgba(0, 0, 0, .3);
  transition: all .35s cubic-bezier(0.45, 1, 0.4, 1);
}
.mask.hide {
  visibility: hidden;
  background: transparent;
}

.icon-picker {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100%;
  overflow: hidden;
  will-change: height;
  transition: height .35s cubic-bezier(0.45, 1, 0.4, 1);
}
.hide .icon-picker {
  height: 0
}

.icon {
  width: 48px;
  height: 48px;
  margin: 15px auto;
  text-align: center;
  line-height: 48px;
  border-radius: 6px;
  transform: scale(1.1);
  opacity: 1;
  transition: opacity .35s cubic-bezier(0.45, 1, 0.4, 1);
}
.hide .icon {
  opacity: 0
}

.iconfont {
  color: #fff;
  font-size: 28px;
}

.pick-zone {
  height: calc(100% - 78px);
  background: #fff;
  border-radius: 12px 12px 0 0;
}
